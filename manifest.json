{
  "manifest_version": 2,

  "name": "MD Translator",
  "version": "0.0.1",

  "description": "Chrome extension for language translation",

  "icons": {
    "19": "icons/icon.png",
    "48": "icons/icon.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking",
    "*://target.site/",
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs",
    "cookies"
  ],
  
  "externally_connectable": {
    "matches": ["https://translate.google.com.ua/*"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["vendor/jquery.js", "vendor/jquery.selection.js", "js/content.js"],
      "css": ["css/content.css"]
    }
  ],

  "background": {
    "scripts": ["vendor/jquery.js", "js/storage.js", "js/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png"
    },
    "default_title": "MD Translator",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "icons/delete.png"
  ],

  "content_security_policy": "script-src 'self' ; object-src 'self'"
}
